#!/usr/bin/env python
import os
import os.path
files = ['rk_report', 'rk_index', 'rk_tag', 'rk_upload']
root = os.path.realpath(__file__)
root, leaf = os.path.split(root)
src = os.path.join(root, 'runner.py')
for f in files:
    tgt = os.path.join('/usr/local/bin', f)
    if (os.path.islink(tgt)):
        os.remove(tgt)
    print ("Installing {0} as {1}".format(src, tgt))
    os.symlink(src, tgt)
