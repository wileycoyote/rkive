#!/usr/bin/python3

with open('nonesuch_retro_cd_1','r') as i, open('markup','w') as o:
    line_counter = 0
    record = []
    o.write("[")
    for l in i:
        line_counter = line_counter + 1
        record.append(l.strip())
        if (line_counter%4 == 0):
            print( record)
            record_str = []
            record_str.append("{")
            record_str.append('"tracknumber":"{0}",'.format(record[0]))
            record_str.append('"title":"{0}",'.format(record[1]))
            record_str.append('"artist":"{0}",'.format(record[2]))
            record_str.append('"filename":"{0}"'.format(record[3]))
            record_str.append("},\n")
            record_s = "".join(record_str)
            o.write(record_s)
            record = []
    o.write("]\n")


